[flake8]
max-line-length = 100
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .eggs,
    .mypy_cache,
    .pytest_cache,
    pyinstaller,
    data,
    docs/_build
per-file-ignores =
    tests/*: D,S101

# Enable useful plugins if they exist (safe to ignore otherwise)
select = C,E,F,W,B,B9
